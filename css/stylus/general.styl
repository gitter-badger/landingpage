body
  background rd-white
  font-family rd-paragraph
  color rd-brown
  width 100%
  height 100%

.poly
  position absolute
  width 100%
  height 75px
  z-index 9999
  img
    margin-top 23px
    margin-left 23px

.header
  background-image url(../img/bg.jpg)
  background-size cover
  background-position center
  background-attachment fixed
  position relative
  top 0
  left 0
  width 100%
  height 110vh
  -webkit-clip-path polygon(0% 0%, 100% 0%, 100% 90%, 0% 100%)
  clip-path polygon(0% 0%, 100% 0%, 0% 100%, 10% 100%)
  display -webkit-box
  display -webkit-flex
  display flex
  -webkit-flex-flow column wrap
  flex-flow column wrap
  -webkit-justify-content center
  justify-content center
  -webkit-align-items center
  align-items center
  p
    max-width 360px
    margin-top 16px
    color rd-white
  .title
    h1
      font-family rd-title
      color rd-white
      font-size 2.5em
    h2
      font-family rd-title-alt
      color rd-red
      text-transform uppercase
      font-size 1em

main
  width 1120px
  height auto
  margin 0 auto
  display -webkit-box
  display -webkit-flex
  display flex
  -webkit-flex-flow row wrap
  flex-flow row wrap
  -webkit-justify-content space-between
  justify-content space-between
  @media (max-width: 980px)
    width 100%

.content
  max-width 70%

.form
  max-width 30%

footer
  width 100%
  height 30vh
  color rd-white
  background-color rd-brown
