body
  background rd-brown
  font-family rd-paragraph
  color rd-brown

.poly
  position absolute
  width 100%
  height 75px
  background rd-white
  -webkit-clip-path polygon(0% 0%, 100% 0%, 10% 100%, 10% 100%)
  clip-path polygon(0% 0%, 100% 0%, 10% 100%, 10% 100%)
  z-index 9999
  img
    margin-top 23px
    margin-left 125px


.header
  background-image url(../img/bg.jpg)
  background-size cover
  background-position center
  background-attachment fixed
  position relative
  top 0
  left 0
  width 100%
  height 100vh
  display -webkit-box
  display -webkit-flex
  display flex
  -webkit-flex-flow column wrap
  flex-flow column wrap
  -webkit-justify-content center
  justify-content center
  -webkit-align-items center
  align-items center
  p
    max-width 360px
    margin-top 16px
    color rd-white
  .title
    h1
      font-family rd-title
      color rd-white
      font-size 2.5em
    h2
      font-family rd-title-alt
      color rd-red
      text-transform uppercase
      font-size 1em

footer
  width 100%
  height 30vh
  background-color rd-brow
